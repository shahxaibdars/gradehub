<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gradehub.AllocateCourseController"
      stylesheets="@com/gradehub/css/styles.css"
      styleClass="vbox">

    <Label text="Allocate Course" styleClass="label-header"/>
    
    <TextField fx:id="teacherIdField" promptText="Enter Teacher ID" maxWidth="250" styleClass="text-field"/>
    <TextField fx:id="courseIdField" promptText="Enter Course ID" maxWidth="250" styleClass="text-field"/>

    <Button text="Allocate Course" onAction="#handleAllocateCourse" styleClass="button"/>
    <Label fx:id="statusLabel" styleClass="label-status"/>
    <Button text="Back" onAction="#goBack" styleClass="button"/>
</VBox>
