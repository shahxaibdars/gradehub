<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gradehub.AddStudentController"
      stylesheets="@com/gradehub/css/styles.css"
      styleClass="vbox">

    <Label text="Add Student" styleClass="label-header"/>
    
    <TextField fx:id="nameField" promptText="Enter Name" maxWidth="250" styleClass="text-field"/>
    <TextField fx:id="idField" promptText="Assign Student ID" maxWidth="250" styleClass="text-field"/>
    <TextField fx:id="passwordField" promptText="Assign password" maxWidth="250" styleClass="text-field"/>
    <TextField fx:id="programField" promptText="Enter Program" maxWidth="250" styleClass="text-field"/>
    <TextField fx:id="enrolYearField" promptText="Enter Enrolment Year" maxWidth="250" styleClass="text-field"/>
    <TextField fx:id="contactField" promptText="Enter Phone Number" maxWidth="250" styleClass="text-field"/>
    
    <Button text="Submit" onAction="#handleAddStudent" styleClass="button"/>
    <Label fx:id="statusLabel" styleClass="label-status"/>
    <Button text="Back" onAction="#goBack" styleClass="button"/>
</VBox>
