<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gradehub.PrintFeeChallanController"
      stylesheets="@com/gradehub/css/styles.css"
      styleClass="vbox">

    <Label text="Print Fee Challan" styleClass="label-header"/>
    
    <!-- Corrected ChoiceBox without promptText -->
    <ChoiceBox fx:id="challanChoiceBox" maxWidth="250" styleClass="choice-box"/>
    
    <!-- Button to preview the selected challan -->
    <Button text="Generate Preview" onAction="#generatePreview" styleClass="button"/>
    
    <!-- TextArea to display the challan preview -->
    <TextArea fx:id="previewTextArea" editable="false" wrapText="true" maxWidth="300" maxHeight="200" styleClass="text-area"/>
    
    <!-- Buttons for print and download -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Print" onAction="#handlePrint" styleClass="button"/>
        <Button text="Download" onAction="#handleDownload" styleClass="button"/>
    </HBox>
    
    <!-- Back Button -->
    <Button text="Back" onAction="#goBack" styleClass="button"/>
</VBox>
