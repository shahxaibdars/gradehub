<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gradehub.LoginController"
      stylesheets="@com/gradehub/css/styles.css"
      styleClass="vbox">
    
    <Label text="Grade Hub" styleClass="label-header"/>
    
    <TextField fx:id="usernameField" promptText="Username" maxWidth="250" styleClass="text-field"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250" styleClass="text-field"/>
    
    <Button text="Login" onAction="#handleLogin" maxWidth="100" styleClass="button"/>
    <Label fx:id="errorLabel" styleClass="label-status"/>
</VBox>
